<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sjack158.alzheimer_s_games_phase01_mockups.SpeedGame.SpeedGame_Level1" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/brainlogo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />



        <Button
            android:id="@+id/ReturnButt"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="Return to Level Menu"
            android:onClick="onClick"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_marginRight="166dp"
            android:layout_marginEnd="166dp" />

    </RelativeLayout>


    <Button
        android:id="@+id/button1"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:background="@drawable/redbuttonback"
        android:scaleType = "centerCrop"
        android:text=""
        android:textSize="50dp"
        android:onClick="clickSliderTile"
        android:layout_above="@+id/button4"
        android:layout_toLeftOf="@+id/button_newGame"
        android:layout_toStartOf="@+id/button_newGame" />

    <Button
        android:id="@+id/button2"
        android:background="@drawable/redbuttonback"
        android:scaleType = "fitXY"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:text=" "
        android:textSize="50dp"

        android:onClick="clickSliderTile"
        android:layout_above="@+id/button5"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:background="@drawable/redbuttonback"
        android:scaleType = "fitXY"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:text=" "
        android:textSize="50dp"

        android:onClick="clickSliderTile"

        android:layout_above="@+id/button6"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:background="@drawable/redbuttonback"
        android:scaleType = "fitXY"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:textSize="50dp"
        android:text=" "
        android:onClick="clickSliderTile"
        android:layout_above="@+id/button7"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:id="@+id/button5"
        android:background="@drawable/redbuttonback"
        android:scaleType = "fitXY"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:textSize="50dp"
        android:text=" "
        android:onClick="clickSliderTile"
        android:layout_below="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button6"
        android:background="@drawable/redbuttonback"
        android:scaleType = "fitXY"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:textSize="50dp"
        android:text=" "
        android:onClick="clickSliderTile"
        android:layout_above="@+id/button9"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button7"
        android:background="@drawable/redbuttonback"
        android:scaleType = "fitXY"
        android:layout_width="175dp"
        android:textSize="50dp"
        android:layout_height="175dp"
        android:text=" "
        android:onClick="clickSliderTile"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/Moves"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:id="@+id/button9"
        android:text=" "
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:textSize="50dp"
        android:background="@drawable/redbuttonback"
        android:scaleType = "fitXY"
        android:onClick="clickSliderTile"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />





    <Button
        android:id="@+id/button8"
        android:text=" "
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:textSize="50dp"
        android:visibility="gone"
        android:background="@drawable/redbuttonback"
        android:scaleType = "fitXY"
        android:onClick="clickSliderTile"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:layout_alignBottom="@+id/button7" />
    <Button
        android:id="@+id/button_newGame"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="New Game"
        android:onClick="clickNewGame"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Press Button to start Game!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_above="@+id/button_newGame"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />


    <TextView
        android:id="@+id/Moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_message"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:text=" " />




</RelativeLayout>