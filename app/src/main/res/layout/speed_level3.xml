<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sjack158.alzheimer_s_games_phase01_mockups.SpeedGame.SpeedGame_Level3" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/brainlogo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />



        <Button
            android:id="@+id/ReturnButt"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="Return to Level Menu"
            android:onClick="onClick"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_marginRight="166dp"
            android:layout_marginEnd="166dp" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        tools:context="com.example.sjack158.alzheimer_s_games_phase01_mockups.SpeedGame.SpeedGame_Level3" >


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text=""
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/redbuttonback"
            android:scaleType = "centerCrop"
            android:text=""
            android:textSize="50dp"
            android:onClick="clickSliderTile"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/textView"
            android:layout_toLeftOf="@+id/button5"
            android:layout_toStartOf="@+id/button5" />

        <Button
            android:id="@+id/button2"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=" "
            android:textSize="50dp"

            android:onClick="clickSliderTile"
            android:layout_above="@+id/button4"
            android:layout_toRightOf="@+id/button1"
            android:layout_toEndOf="@+id/button1" />

        <Button
            android:id="@+id/button3"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text=" "
            android:textSize="50dp"
            android:onClick="clickSliderTile"
            android:layout_above="@+id/button4"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2" />

        <Button
            android:id="@+id/button4"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textSize="50dp"
            android:text=" "
            android:onClick="clickSliderTile"
            android:layout_below="@+id/button1"
            android:layout_alignLeft="@+id/button1"
            android:layout_alignStart="@+id/button1" />

        <Button
            android:id="@+id/button5"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textSize="50dp"
            android:text=" "
            android:onClick="clickSliderTile"
            android:layout_alignTop="@+id/button4"
            android:layout_toLeftOf="@+id/button6"
            android:layout_toStartOf="@+id/button6" />

        <Button
            android:id="@+id/button6"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textSize="50dp"
            android:text=" "
            android:onClick="clickSliderTile"
            android:layout_below="@+id/button3"
            android:layout_alignLeft="@+id/button9"
            android:layout_alignStart="@+id/button9" />

        <Button
            android:id="@+id/button7"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:layout_width="120dp"
            android:textSize="50dp"
            android:layout_height="120dp"
            android:text=" "
            android:onClick="clickSliderTile"
            android:layout_below="@+id/button4"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4" />

        <Button
            android:id="@+id/button9"
            android:text=" "
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textSize="50dp"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:onClick="clickSliderTile"
            android:layout_below="@+id/button6"
            android:layout_toRightOf="@+id/button_newGame"
            android:layout_toEndOf="@+id/button_newGame" />
        <Button
            android:id="@+id/button8"
            android:text=" "
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textSize="50dp"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:onClick="clickSliderTile"
            android:layout_below="@+id/button5"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5"
            />




        <Button
            android:id="@+id/button_newGame"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="newGame"
            android:onClick="clickNewGame"
            />

        <TextView
            android:id="@+id/textView_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Press Button to start Game!"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_above="@+id/button_newGame"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/Moves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView_message"
            android:textSize="25dp"
            android:text=" " />

        <Button
            android:id="@+id/button10"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:layout_width="120dp"
            android:textSize="50dp"
            android:layout_height="120dp"
            android:text=" "
            android:onClick="clickSliderTile"
            android:layout_below="@+id/button7"
            android:layout_alignLeft="@+id/button7"
            android:layout_alignStart="@+id/button7"
            />

        <Button
            android:id="@+id/button12"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:layout_width="120dp"
            android:textSize="50dp"
            android:layout_height="120dp"
            android:text=" "
            android:onClick="clickSliderTile"
            android:layout_below="@+id/button9"
            android:layout_toRightOf="@+id/button11"
            android:layout_toEndOf="@+id/button11"
            android:layout_alignLeft="@+id/button9"
            android:layout_alignStart="@+id/button9"
            />

        <Button
            android:id="@+id/button11"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:layout_width="120dp"
            android:textSize="50dp"
            android:layout_height="120dp"
            android:text=" "
            android:onClick="clickSliderTile"
            android:layout_below="@+id/button9"
            android:layout_toRightOf="@+id/button10"
            android:layout_toEndOf="@+id/button10"
            android:layout_alignLeft="@+id/button8"
            android:layout_alignStart="@+id/button8"
            />

        <Button
            android:id="@+id/button13"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:layout_width="120dp"
            android:textSize="50dp"
            android:layout_height="120dp"
            android:text=" "
            android:onClick="clickSliderTile"
            android:layout_below="@+id/button10"
            android:layout_alignLeft="@+id/button10"
            android:layout_alignStart="@+id/button10"
            />
        <Button
            android:id="@+id/button14"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:layout_width="120dp"
            android:textSize="50dp"
            android:layout_height="120dp"
            android:text=" "
            android:onClick="clickSliderTile"
            android:layout_below="@+id/button12"
            android:layout_alignLeft="@+id/button12"
            android:layout_alignStart="@+id/button12"
            />

        <Button
            android:id="@+id/button15"
            android:background="@drawable/redbuttonback"
            android:scaleType = "fitXY"
            android:layout_width="120dp"
            android:visibility="gone"
            android:textSize="50dp"
            android:layout_height="120dp"
            android:text=" "
            android:onClick="clickSliderTile"
            android:layout_toRightOf="@+id/button10"
            android:layout_toEndOf="@+id/button10"
            android:layout_below="@+id/button11"
            android:layout_alignLeft="@+id/button11"
            android:layout_alignStart="@+id/button11"

            />

    </RelativeLayout>




</RelativeLayout>