<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/brainlogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/brainlogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="BLUE"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:id="@+id/b3Button"
        android:textSize="45sp"
        android:textColor="#0029cc"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_alignBaseline="@+id/r3Button"
        android:layout_alignBottom="@+id/r3Button"
        android:layout_toRightOf="@+id/r3Button"
        android:layout_toEndOf="@+id/r3Button" />

    <Button
        android:text="CYAN"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:textSize="45sp"
        android:id="@+id/c3Button"
        android:textColor="#00fffb"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/r3Button"
        android:layout_alignLeft="@+id/r3Button"
        android:layout_alignStart="@+id/r3Button" />

    <Button
        android:text="RED"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:id="@+id/r3Button"
        android:textSize="45sp"
        android:textColor="#F00"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp" />

    <Button
        android:text="YELLOW"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:textSize="45sp"
        android:id="@+id/y3Button"
        android:textColor="#FFFF00"
        android:layout_alignBaseline="@+id/gy3Button"
        android:layout_alignBottom="@+id/gy3Button"
        android:layout_alignLeft="@+id/g3Button"
        android:layout_alignStart="@+id/g3Button" />

    <TextView
        android:text=""
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:textSize="30sp"
        android:id="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_marginBottom="14dp" />

    <Button
        android:text="BLACK"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:textSize="45sp"
        android:id="@+id/bk3Button"
        android:layout_alignBaseline="@+id/c3Button"
        android:layout_alignBottom="@+id/c3Button"
        android:layout_alignLeft="@+id/b3Button" />

    <Button
        android:text="GREEN"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:textSize="45sp"
        android:id="@+id/g3Button"
        android:textColor="#02ff02"
        android:layout_alignTop="@+id/m3Button"
        android:layout_alignLeft="@+id/bk3Button" />

    <Button
        android:text="MAGENTA"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:textSize="40sp"
        android:id="@+id/m3Button"
        android:textColor="#ff0095"
        android:layout_below="@+id/bk3Button"
        android:layout_alignLeft="@+id/c3Button"
        android:layout_alignStart="@+id/c3Button"
        android:layout_marginTop="27dp" />

    <TextView
        android:text="Choose the COLOR"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_below="@+id/brainlogo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:id="@+id/textView"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/brainlogo"
        android:layout_alignStart="@+id/brainlogo" />

    <Button
        android:text="GRAY"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:textSize="45sp"
        android:id="@+id/gy3Button"
        android:textColor="#949494"
        android:layout_below="@+id/g3Button"
        android:layout_alignLeft="@+id/m3Button"
        android:layout_alignStart="@+id/m3Button"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/returnbutt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick=""
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:text="Return" />


</RelativeLayout>