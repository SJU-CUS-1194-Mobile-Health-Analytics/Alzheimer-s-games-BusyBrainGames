<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="BusyBrainGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:id="@+id/AppTitle"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Administrator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AppTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:id="@+id/AdminButton" />

    <Button
        android:text="Patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AdminButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/PatientButton" />

    <ImageView
        android:src="@drawable/brainlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/PatientButton"
        android:layout_alignEnd="@+id/PatientButton"
        android:layout_marginTop="73dp" />


</RelativeLayout>